@model ShoeShop.Services.DTOs.StockPullOutDto
@{
    ViewData["Title"] = "Pull-Out Request Details";
    var canApprove = Model.Status == ShoeShop.Repository.Entities.PullOutStatus.Pending;
    var canComplete = Model.Status == ShoeShop.Repository.Entities.PullOutStatus.Approved;
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h2><i class="fas fa-file-alt"></i> Pull-Out Request Details</h2>
        <p>Request #@Model.Id</p>
    </div>
    <div>
        @{
            var statusClass = Model.Status.ToString() switch
            {
                "Pending" => "bg-warning",
                "Approved" => "bg-info",
                "Completed" => "bg-success",
                "Rejected" => "bg-danger",
                _ => "bg-secondary"
            };
        }
        <h3><span class="badge @statusClass">@Model.StatusDisplay</span></h3>
    </div>
</div>

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <!-- Request Information -->
    <div class="col-lg-5 mb-4">
        <div class="card">
            <div class="card-header" style="background-color: var(--primary-color); color: white;">
                <h5 class="mb-0"><i class="fas fa-info-circle"></i> Request Information</h5>
            </div>
            <div class="card-body">
                <dl class="mb-0">
                    <dt>Request ID:</dt>
                    <dd><strong>#@Model.Id</strong></dd>

                    <dt>Shoe:</dt>
                    <dd><strong>@Model.ShoeName</strong></dd>

                    <dt>Color:</dt>
                    <dd>
                        <span class="badge badge-custom" style="background-color: #6c757d; color: white;">
                            @Model.ColorName
                        </span>
                    </dd>

                    <dt>Quantity:</dt>
                    <dd><h4 class="text-danger mb-0">@Model.Quantity units</h4></dd>

                    <dt>Reason:</dt>
                    <dd>
                        <span class="badge bg-secondary">@Model.Reason</span>
                    </dd>

                    @if (!string.IsNullOrEmpty(Model.ReasonDetails))
                    {
                        <dt>Details:</dt>
                        <dd>@Model.ReasonDetails</dd>
                    }

                    <dt>Requested By:</dt>
                    <dd>@Model.RequestedBy</dd>

                    <dt>Request Date:</dt>
                    <dd>@Model.PullOutDate.ToString("MMMM dd, yyyy hh:mm tt")</dd>

                    @if (!string.IsNullOrEmpty(Model.ApprovedBy))
                    {
                        <dt>Approved By:</dt>
                        <dd>@Model.ApprovedBy</dd>
                    }

                    <dt>Status:</dt>
                    <dd><span class="badge @statusClass">@Model.StatusDisplay</span></dd>
                </dl>

                <hr />

                <!-- Action Buttons -->
                @if (canApprove)
                {
                    <div class="mb-3">
                        <label class="form-label"><strong>Manager Actions:</strong></label>

                        <button type="button" class="btn btn-success w-100 mb-2" data-bs-toggle="modal" data-bs-target="#approveModal">
                            <i class="fas fa-check"></i> Approve Request
                        </button>

                        <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#rejectModal">
                            <i class="fas fa-times"></i> Reject Request
                        </button>
                    </div>
                }
                @if (canComplete)
                {
                    <form asp-action="Complete" asp-route-id="@Model.Id" method="post">
                        <button type="submit" class="btn btn-success w-100 mb-2" onclick="return confirm('Are you sure you want to complete this pull-out? Stock will be deducted.')">
                            <i class="fas fa-box-open"></i> Complete Pull-Out
                        </button>
                    </form>
                }

                <a asp-action="Index" class="btn btn-secondary w-100">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <!-- Timeline / Status History -->
    <div class="col-lg-7 mb-4">
        <div class="card">
            <div class="card-header" style="background-color: var(--primary-color); color: white;">
                <h5 class="mb-0"><i class="fas fa-history"></i> Request Timeline</h5>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <!-- Request Created -->
                    <div class="timeline-item">
                        <div class="timeline-marker bg-primary"></div>
                        <div class="timeline-content">
                            <h6 class="mb-1">Request Created</h6>
                            <p class="mb-1 text-muted">@Model.PullOutDate.ToString("MMMM dd, yyyy hh:mm tt")</p>
                            <p class="mb-0">Requested by <strong>@Model.RequestedBy</strong></p>
                            <p class="mb-0"><small>Quantity: @Model.Quantity units</small></p>
                        </div>
                    </div>

                    <!-- Approved / Rejected -->
                    @if (Model.Status == ShoeShop.Repository.Entities.PullOutStatus.Approved ||
                                        Model.Status == ShoeShop.Repository.Entities.PullOutStatus.Completed)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Request Approved</h6>
                                @if (!string.IsNullOrEmpty(Model.ApprovedBy))
                                {
                                    <p class="mb-0">Approved by <strong>@Model.ApprovedBy</strong></p>
                                }
                            </div>
                        </div>
                    }
                    @if (Model.Status == ShoeShop.Repository.Entities.PullOutStatus.Rejected)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-danger"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Request Rejected</h6>
                                @if (!string.IsNullOrEmpty(Model.ReasonDetails))
                                {
                                    <p class="mb-0 text-muted">@Model.ReasonDetails</p>
                                }
                            </div>
                        </div>
                    }

                    <!-- Completed -->
                    @if (Model.Status == ShoeShop.Repository.Entities.PullOutStatus.Completed)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Pull-Out Completed</h6>
                                <p class="mb-0">Stock deducted: @Model.Quantity units</p>
                            </div>
                        </div>
                    }

                    <!-- Pending -->
                    @if (Model.Status == ShoeShop.Repository.Entities.PullOutStatus.Pending)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-warning"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Awaiting Approval</h6>
                                <p class="mb-0 text-muted">Manager approval required</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Reason Card -->
        <div class="card mt-4">
            <div class="card-header bg-light">
                <h6 class="mb-0"><i class="fas fa-clipboard-list"></i> Pull-Out Reason</h6>
            </div>
            <div class="card-body">
                <h5>@Model.Reason</h5>
                @if (!string.IsNullOrEmpty(Model.ReasonDetails))
                {
                    <p class="mb-0 text-muted">@Model.ReasonDetails</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Approve Modal -->
<div class="modal fade" id="approveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Approve Pull-Out Request</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Approve" asp-route-id="@Model.Id" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to approve this pull-out request?</p>

                    <div class="alert alert-info">
                        <strong>Summary:</strong><br />
                        Shoe: @Model.ShoeName - @Model.ColorName<br />
                        Quantity: @Model.Quantity units<br />
                        Reason: @Model.Reason
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Your Name (Manager) *</label>
                        <input type="text" name="approvedBy" class="form-control" placeholder="Enter your name" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i> Approve Request
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Reject Pull-Out Request</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Reject" asp-route-id="@Model.Id" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to reject this pull-out request?</p>

                    <div class="mb-3">
                        <label class="form-label">Reason for Rejection *</label>
                        <textarea name="reason" class="form-control" rows="3" placeholder="Explain why this request is being rejected..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times"></i> Reject Request
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .timeline {
            position: relative;
            padding: 20px 0;
        }

        .timeline-item {
            position: relative;
            padding-left: 50px;
            padding-bottom: 30px;
        }

            .timeline-item:before {
                content: '';
                position: absolute;
                left: 15px;
                top: 25px;
                bottom: -10px;
                width: 2px;
                background: #dee2e6;
            }

            .timeline-item:last-child:before {
                display: none;
            }

        .timeline-marker {
            position: absolute;
            left: 6px;
            top: 0;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            border: 3px solid #fff;
            box-shadow: 0 0 0 2px #dee2e6;
        }

        .timeline-content {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
        }
    </style>
}