@model ShoeShop.Services.DTOs.CreateShoeColorVariationDto
@{
    ViewData["Title"] = "Add Color Variation";
    var shoes = ViewBag.Shoes as List<ShoeShop.Services.DTOs.ShoeDto>;
}

<div class="page-header">
    <h2><i class="fas fa-palette"></i> Add Color Variation</h2>
    <p>Add a new color variation for an existing shoe</p>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card">
            <div class="card-body p-4">
                <form asp-action="CreateColor" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="ShoeId" class="form-label">Select Shoe *</label>
                        <select asp-for="ShoeId" class="form-select">
                            <option value="">-- Select a Shoe --</option>
                            @if (shoes != null)
                            {
                                @foreach (var shoe in shoes)
                                {
                                    <option value="@shoe.Id">@shoe.Name - @shoe.Brand</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="ShoeId" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label asp-for="ColorName" class="form-label">Color Name *</label>
                            <input asp-for="ColorName" class="form-control" placeholder="e.g., Red, Black, White" />
                            <span asp-validation-for="ColorName" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="HexCode" class="form-label">Hex Code</label>
                            <input asp-for="HexCode" type="color" class="form-control form-control-color" value="#000000" />
                            <input asp-for="HexCode" type="text" class="form-control mt-1" placeholder="#000000" />
                            <span asp-validation-for="HexCode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StockQuantity" class="form-label">Initial Stock Quantity *</label>
                            <input asp-for="StockQuantity" type="number" class="form-control" placeholder="0" />
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ReorderLevel" class="form-label">Reorder Level *</label>
                            <input asp-for="ReorderLevel" type="number" class="form-control" value="5" />
                            <span asp-validation-for="ReorderLevel" class="text-danger"></span>
                            <small class="text-muted">Alert when stock reaches this level</small>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-success btn-custom">
                            <i class="fas fa-save"></i> Create Color Variation
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Sync color picker with text input
        document.querySelector('input[type="color"]').addEventListener('change', function() {
            document.querySelector('input[type="text"][name="HexCode"]').value = this.value;
        });
        document.querySelector('input[type="text"][name="HexCode"]').addEventListener('change', function() {
            document.querySelector('input[type="color"]').value = this.value;
        });
    </script>
}