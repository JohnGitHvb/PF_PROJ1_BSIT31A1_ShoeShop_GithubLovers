@model ShoeShop.Services.DTOs.ShoeDto
@{
    ViewData["Title"] = "Delete Shoe";
}

<div class="page-header">
    <h2><i class="fas fa-trash"></i> Delete Shoe</h2>
    <p>Are you sure you want to delete this shoe?</p>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Confirm Deletion</h5>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-circle"></i>
                    <strong>Warning!</strong> This action cannot be undone. The shoe will be marked as inactive.
                </div>

                <dl class="row">
                    <dt class="col-sm-3">Name:</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Brand:</dt>
                    <dd class="col-sm-9">@Model.Brand</dd>

                    <dt class="col-sm-3">Cost:</dt>
                    <dd class="col-sm-9">$@Model.Cost.ToString("N2")</dd>

                    <dt class="col-sm-3">Price:</dt>
                    <dd class="col-sm-9">$@Model.Price.ToString("N2")</dd>

                    <dt class="col-sm-3">Color Variations:</dt>
                    <dd class="col-sm-9">
                        @foreach (var color in Model.ColorVariations)
                        {
                            <span class="badge badge-custom me-1" style="background-color: @color.HexCode; color: white;">
                                @color.ColorName (@color.StockQuantity in stock)
                            </span>
                        }
                    </dd>
                </dl>

                <form asp-action="DeleteShoe" asp-route-id="@Model.Id" method="post">
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger btn-custom">
                            <i class="fas fa-trash"></i> Yes, Delete Shoe
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>