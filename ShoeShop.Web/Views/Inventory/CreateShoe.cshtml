@model ShoeShop.Services.DTOs.CreateShoeDto
@{
    ViewData["Title"] = "Add New Shoe";
}

<div class="page-header">
    <h2><i class="fas fa-plus"></i> Add New Shoe</h2>
    <p>Add a new shoe model to your inventory</p>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card">
            <div class="card-body p-4">
                <form asp-action="CreateShoe" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Shoe Name *</label>
                        <input asp-for="Name" class="form-control" placeholder="e.g., Air Max 270" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Brand" class="form-label">Brand *</label>
                        <input asp-for="Brand" class="form-control" placeholder="e.g., Nike" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Cost" class="form-label">Cost (Purchase Price) *</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Cost" class="form-control" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Cost" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label">Price (Selling Price) *</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Price" class="form-control" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter shoe description..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label">Image URL</label>
                        <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/shoe-image.jpg" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                        <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary btn-custom">
                        <i class="fas fa-save"></i> Create Shoe
                    </button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}