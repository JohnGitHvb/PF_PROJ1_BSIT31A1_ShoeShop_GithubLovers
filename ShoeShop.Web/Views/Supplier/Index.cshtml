@model List<ShoeShop.Services.DTOs.SupplierDto>
@{
    ViewData["Title"] = "Suppliers";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h2><i class="fas fa-truck"></i> Supplier Management</h2>
        <p>Manage your shoe suppliers and contacts</p>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary btn-custom">
            <i class="fas fa-plus"></i> Add New Supplier
        </a>
    </div>
</div>

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Suppliers Statistics -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="stat-card success">
            <div class="icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h3>@Model.Count(s => s.IsActive)</h3>
            <p class="text-muted mb-0">Active Suppliers</p>
        </div>
    </div>
    <div class="col-md-6">
        <div class="stat-card warning">
            <div class="icon">
                <i class="fas fa-ban"></i>
            </div>
            <h3>@Model.Count(s => !s.IsActive)</h3>
            <p class="text-muted mb-0">Inactive Suppliers</p>
        </div>
    </div>
</div>

<!-- Suppliers Table -->
<div class="card table-custom">
    <div class="card-header" style="background-color: var(--primary-color); color: white;">
        <h5 class="mb-0"><i class="fas fa-list"></i> All Suppliers (@Model.Count)</h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Contact Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var supplier in Model)
                    {
                        <tr class="@(!supplier.IsActive ? "table-secondary" : "")">
                            <td>
                                <strong>@supplier.Name</strong>
                            </td>
                            <td>
                                <a href="mailto:@supplier.ContactEmail">
                                    <i class="fas fa-envelope"></i> @supplier.ContactEmail
                                </a>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(supplier.ContactPhone))
                                {
                                    <a href="tel:@supplier.ContactPhone">
                                        <i class="fas fa-phone"></i> @supplier.ContactPhone
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(supplier.Address))
                                {
                                    <small>@supplier.Address</small>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>
                                @if (supplier.IsActive)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-ban"></i> Inactive
                                    </span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@supplier.Id" class="btn btn-sm btn-info" title="Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@supplier.Id" class="btn btn-sm btn-warning" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                @if (supplier.IsActive)
                                {
                                    <form asp-action="Deactivate" asp-route-id="@supplier.Id" method="post" style="display: inline;">
                                        <button type="submit" class="btn btn-sm btn-secondary" title="Deactivate" onclick="return confirm('Are you sure you want to deactivate this supplier?')">
                                            <i class="fas fa-ban"></i>
                                        </button>
                                    </form>
                                }
                                <a asp-action="Delete" asp-route-id="@supplier.Id" class="btn btn-sm btn-danger" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="p-5 text-center text-muted">
                <i class="fas fa-inbox fa-3x mb-3"></i>
                <p>No suppliers found</p>
                <a asp-action="Create" class="btn btn-primary btn-custom">
                    <i class="fas fa-plus"></i> Add Your First Supplier
                </a>
            </div>
        }
    </div>
</div>