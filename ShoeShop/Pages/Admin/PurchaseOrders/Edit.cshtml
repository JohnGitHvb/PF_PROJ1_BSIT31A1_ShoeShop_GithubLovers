@page "{id:int}"
@using ShoeShop.Entities
@model ShoeShop.Pages.Admin.PurchaseOrders.EditModel
@{
    ViewData["Title"] = "Edit Purchase Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="mb-4"><i class="fa fa-edit"></i> Edit Purchase Order</h1>
<div class="card">
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="PurchaseOrder.Id" />
            <div class="mb-3">
                <label asp-for="PurchaseOrder.OrderNumber" class="form-label"><i class="fa fa-hashtag"></i> Order Number</label>
                <input asp-for="PurchaseOrder.OrderNumber" class="form-control" placeholder="e.g. PO-2024-001" />
                <span asp-validation-for="PurchaseOrder.OrderNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PurchaseOrder.SupplierId" class="form-label"><i class="fa fa-truck"></i> Supplier</label>
                <select asp-for="PurchaseOrder.SupplierId" class="form-select" asp-items="Model.SupplierOptions">
                    <option value="">Select supplier...</option>
                </select>
                <span asp-validation-for="PurchaseOrder.SupplierId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PurchaseOrder.OrderDate" class="form-label"><i class="fa fa-calendar"></i> Order Date</label>
                <input asp-for="PurchaseOrder.OrderDate" class="form-control" type="date" />
                <span asp-validation-for="PurchaseOrder.OrderDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PurchaseOrder.ExpectedDate" class="form-label"><i class="fa fa-calendar-check"></i> Expected Date</label>
                <input asp-for="PurchaseOrder.ExpectedDate" class="form-control" type="date" />
                <span asp-validation-for="PurchaseOrder.ExpectedDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PurchaseOrder.Status" class="form-label"><i class="fa fa-info-circle"></i> Status</label>
                <select asp-for="PurchaseOrder.Status" class="form-select">
                    @foreach (var status in Enum.GetValues(typeof(PurchaseOrderStatus)))
                    {
                        <option value="@status" @(Model.PurchaseOrder.Status == (PurchaseOrderStatus)status ? "selected" : "")>@status</option>
                    }
                </select>
                <span asp-validation-for="PurchaseOrder.Status" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PurchaseOrder.TotalAmount" class="form-label"><i class="fa fa-money-bill"></i> Total Amount</label>
                <div class="input-group">
                    <span class="input-group-text">?</span>
                    <input asp-for="PurchaseOrder.TotalAmount" class="form-control" type="number" step="0.01" placeholder="e.g. 10000.00" />
                </div>
                <span asp-validation-for="PurchaseOrder.TotalAmount" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save Changes</button>
            <a href="/admin/purchaseorders" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
