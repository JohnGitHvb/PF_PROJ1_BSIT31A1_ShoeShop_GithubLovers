@page "{id:int}"
@model ShoeShop.Pages.Admin.PurchaseOrders.DeleteModel
@{
    ViewData["Title"] = "Delete Purchase Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="mb-4 text-danger"><i class="fa fa-trash"></i> Delete Purchase Order</h1>
<div class="card border-danger">
    <div class="card-body">
        <h5 class="card-title">Are you sure you want to delete this purchase order?</h5>
        <dl class="row">
            <dt class="col-sm-3">Order Number</dt>
            <dd class="col-sm-9">@Model.PurchaseOrder.OrderNumber</dd>
            <dt class="col-sm-3">Supplier</dt>
            <dd class="col-sm-9">@Model.PurchaseOrder.Supplier?.Name</dd>
            <dt class="col-sm-3">Order Date</dt>
            <dd class="col-sm-9">@Model.PurchaseOrder.OrderDate.ToShortDateString()</dd>
            <dt class="col-sm-3">Expected Date</dt>
            <dd class="col-sm-9">@Model.PurchaseOrder.ExpectedDate.ToShortDateString()</dd>
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.PurchaseOrder.Status</dd>
            <dt class="col-sm-3">Total Amount</dt>
            <dd class="col-sm-9">?@Model.PurchaseOrder.TotalAmount.ToString("N2")</dd>
        </dl>
        <form method="post">
            <input type="hidden" asp-for="PurchaseOrder.Id" />
            <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
            <a href="/admin/purchaseorders" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
