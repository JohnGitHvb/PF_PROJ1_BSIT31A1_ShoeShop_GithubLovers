@page
@model ShoeShop.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold"><i class="fa fa-chart-bar me-2"></i> Welcome back, Admin!</h2>
            <p class="text-muted">Here’s a quick snapshot of your store’s performance today.</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-bg-primary mb-3 shadow-sm">
                <div class="card-body">
                    <h6 class="card-title text-uppercase">Total Shoes</h6>
                    <p class="card-text display-6" id="totalShoes">@Model.TotalShoes</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-warning mb-3 shadow-sm">
                <div class="card-body">
                    <h6 class="card-title text-uppercase">Low Stock</h6>
                    <p class="card-text display-6" id="lowStock">@Model.LowStock</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-info mb-3 shadow-sm">
                <div class="card-body">
                    <h6 class="card-title text-uppercase">Pending Orders</h6>
                    <p class="card-text display-6" id="pendingOrders">@Model.PendingOrders</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4 shadow-sm">
                <div class="card-header fw-semibold">
                    <i class="fa fa-chart-line me-2"></i> Inventory Analytics
                </div>
                <div class="card-body">
                    <canvas id="inventoryChart" height="120"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-header fw-semibold">
                    <i class="fa fa-bolt me-2"></i> Quick Actions
                </div>
                <div class="card-body d-grid gap-2">
                    <a href="/admin/shoes/create" class="btn btn-success">
                        <i class="fa fa-plus me-1"></i> Add Shoe
                    </a>
                    <a href="/admin/shoes/lowstock" class="btn btn-warning">
                        <i class="fa fa-exclamation-triangle me-1"></i> View Low Stock
                    </a>
                    <a href="/admin/purchaseorders/pending" class="btn btn-info">
                        <i class="fa fa-file-invoice me-1"></i> View Pending Orders
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        var ctx = document.getElementById('inventoryChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Nike', 'Adidas', 'Puma', 'Reebok'],
                datasets: [{
                    label: 'Stock',
                    data: [12, 19, 3, 5],
                    backgroundColor: 'rgba(54, 162, 235, 0.7)'
                }]
            },
            options: {
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });
    });
</script>
