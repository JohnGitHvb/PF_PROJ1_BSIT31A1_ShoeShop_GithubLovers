@page "{id:int}"
@model ShoeShop.Pages.Admin.Suppliers.DeleteModel
@{
    ViewData["Title"] = "Delete Supplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="mb-4 text-danger"><i class="fa fa-trash"></i> Delete Supplier</h1>
<div class="card border-danger">
    <div class="card-body">
        <h5 class="card-title">Are you sure you want to delete this supplier?</h5>
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Supplier.Name</dd>
            <dt class="col-sm-3">Contact Email</dt>
            <dd class="col-sm-9">@Model.Supplier.ContactEmail</dd>
            <dt class="col-sm-3">Contact Phone</dt>
            <dd class="col-sm-9">@Model.Supplier.ContactPhone</dd>
            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.Supplier.Address</dd>
        </dl>
        <form method="post">
            <input type="hidden" asp-for="Supplier.Id" />
            <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
            <a href="/admin/suppliers" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
