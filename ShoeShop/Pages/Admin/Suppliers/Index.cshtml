@page
@model ShoeShop.Pages.Admin.Suppliers.IndexModel
@{
    ViewData["Title"] = "Suppliers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="mb-4"><i class="fa fa-truck"></i> Suppliers</h1>
<a class="btn btn-success mb-3" href="/admin/suppliers/create"><i class="fa fa-plus"></i> Add Supplier</a>
<div class="card">
    <div class="card-body">
        <table id="suppliersTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Contact Phone</th>
                    <th>Contact Email</th>
                    <th>Address</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var supplier in Model.Suppliers)
            {
                <tr>
                    <td>@supplier.Name</td>
                    <td>@supplier.ContactPhone</td>
                    <td>@supplier.ContactEmail</td>
                    <td>@supplier.Address</td>
                    <td>@(supplier.IsActive ? "Yes" : "No")</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/admin/suppliers/edit/@supplier.Id"><i class="fa fa-edit"></i></a>
                        <a class="btn btn-sm btn-danger" href="/admin/suppliers/delete/@supplier.Id"><i class="fa fa-trash"></i></a>
                        <a class="btn btn-sm btn-info" href="/admin/suppliers/details/@supplier.Id"><i class="fa fa-eye"></i></a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <script>
        $(document).ready(function () {
            $('#suppliersTable').DataTable();
        });
    </script>
}
