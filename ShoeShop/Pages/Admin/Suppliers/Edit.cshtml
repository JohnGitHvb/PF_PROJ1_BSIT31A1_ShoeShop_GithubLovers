@page "{id:int}"
@model ShoeShop.Pages.Admin.Suppliers.EditModel
@{
    ViewData["Title"] = "Edit Supplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="mb-4"><i class="fa fa-edit"></i> Edit Supplier</h1>
<div class="card">
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Supplier.Id" />
            <div class="mb-3">
                <label asp-for="Supplier.Name" class="form-label"><i class="fa fa-truck"></i> Name</label>
                <input asp-for="Supplier.Name" class="form-control" placeholder="e.g. ABC Trading" />
                <span asp-validation-for="Supplier.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Supplier.ContactEmail" class="form-label"><i class="fa fa-envelope"></i> Contact Email</label>
                <input asp-for="Supplier.ContactEmail" class="form-control" placeholder="e.g. supplier@email.com" />
                <span asp-validation-for="Supplier.ContactEmail" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Supplier.ContactPhone" class="form-label"><i class="fa fa-phone"></i> Contact Phone</label>
                <input asp-for="Supplier.ContactPhone" class="form-control" placeholder="e.g. 09123456789" />
                <span asp-validation-for="Supplier.ContactPhone" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Supplier.Address" class="form-label"><i class="fa fa-map-marker-alt"></i> Address</label>
                <input asp-for="Supplier.Address" class="form-control" placeholder="e.g. Manila, Philippines" />
                <span asp-validation-for="Supplier.Address" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input asp-for="Supplier.IsActive" class="form-check-input" type="checkbox" />
                <label asp-for="Supplier.IsActive" class="form-check-label">Active (show in supplier list)</label>
            </div>
            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save Changes</button>
            <a href="/admin/suppliers" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
