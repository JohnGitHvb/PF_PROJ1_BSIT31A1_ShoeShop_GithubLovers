@page "{id:int}"
@model ShoeShop.Pages.Admin.Suppliers.DetailsModel
@{
    ViewData["Title"] = "Supplier Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="mb-4"><i class="fa fa-eye"></i> Supplier Details</h1>
<div class="card mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Supplier.Name</dd>
            <dt class="col-sm-3">Contact Email</dt>
            <dd class="col-sm-9">@Model.Supplier.ContactEmail</dd>
            <dt class="col-sm-3">Contact Phone</dt>
            <dd class="col-sm-9">@Model.Supplier.ContactPhone</dd>
            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.Supplier.Address</dd>
            <dt class="col-sm-3">Active</dt>
            <dd class="col-sm-9">@(Model.Supplier.IsActive ? "Yes" : "No")</dd>
        </dl>
    </div>
</div>
@if (Model.Supplier.PurchaseOrders != null && Model.Supplier.PurchaseOrders.Any())
{
    <div class="card">
        <div class="card-header">Purchase Orders</div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Order #</th>
                        <th>Order Date</th>
                        <th>Expected Date</th>
                        <th>Status</th>
                        <th>Total Amount</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var po in Model.Supplier.PurchaseOrders)
                {
                    <tr>
                        <td>@po.OrderNumber</td>
                        <td>@po.OrderDate.ToShortDateString()</td>
                        <td>@po.ExpectedDate.ToShortDateString()</td>
                        <td>@po.Status</td>
                        <td>?@po.TotalAmount.ToString("N2")</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}
<a href="/admin/suppliers" class="btn btn-secondary mt-3">Back to List</a>
