<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ShoeShop</title>

    <!-- Bootstrap & Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />

    <!-- Custom Theme -->
    <link href="/css/admin-theme.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-weight: 600;
            font-size: 1.25rem;
        }

        .sidebar {
            height: 100vh;
            border-right: 1px solid #dee2e6;
            background-color: #ffffff;
        }

        .nav-link {
            color: #333;
            padding: 10px 15px;
            transition: background-color 0.2s ease;
        }

            .nav-link:hover {
                background-color: #e9ecef;
                border-radius: 5px;
            }

            .nav-link.active {
                background-color: #0d6efd;
                color: #fff !important;
                font-weight: bold;
                border-radius: 5px;
            }

        footer {
            background-color: #ffffff;
            border-top: 1px solid #dee2e6;
            text-align: center;
            padding: 1rem;
            font-size: 0.875rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-dark bg-dark sticky-top">
        <a class="navbar-brand ms-3" href="/admin/dashboard">
            <i class="fa-solid fa-shoe-prints"></i> ShoeShop
        </a>
    </nav>

    <!-- Page Layout -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-none d-md-block sidebar">
                <div class="pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/admin/dashboard">
                                <i class="fa fa-chart-bar me-2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/shoes">
                                <i class="fa fa-shoe-prints me-2"></i> Shoes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/purchaseorders">
                                <i class="fa fa-file-invoice me-2"></i> Orders
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/suppliers">
                                <i class="fa fa-truck me-2"></i> Suppliers
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        &copy; 2025 ShoeShop. All rights reserved.
    </footer>

    <!-- Partials -->
    @await Html.PartialAsync("_ToastNotification")
    @await Html.PartialAsync("_LoadingIndicator")

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/js/admin.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
