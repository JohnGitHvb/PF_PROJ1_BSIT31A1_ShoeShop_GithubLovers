@page
@model ShoeShop.Pages.Admin.Shoes.IndexModel
@{
    ViewData["Title"] = "Shoes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="mb-4"><i class="fa fa-shoe-prints"></i> Shoes Inventory</h1>
<div class="card">
    <div class="card-body">
        <table id="shoesTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Cost</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Active</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var shoe in Model.Shoes)
            {
                <tr>
                    <td>@shoe.Name</td>
                    <td>@shoe.Brand</td>
                    <td>@shoe.Cost</td>
                    <td>@shoe.Price</td>
                    <td>@shoe.Description</td>
                    <td>@(shoe.IsActive ? "Yes" : "No")</td>
                    <td>@shoe.CreatedDate.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/admin/shoes/edit/@shoe.Id"><i class="fa fa-edit"></i></a>
                        <a class="btn btn-sm btn-danger" href="/admin/shoes/delete/@shoe.Id"><i class="fa fa-trash"></i></a>
                        <a class="btn btn-sm btn-info" href="/admin/shoes/details/@shoe.Id"><i class="fa fa-eye"></i></a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
