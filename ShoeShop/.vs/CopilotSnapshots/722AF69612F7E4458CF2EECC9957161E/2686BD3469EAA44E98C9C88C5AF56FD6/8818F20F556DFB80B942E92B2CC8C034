@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function() {
            $('input[name="Shoe.ImageUrl"]').on('input', function() {
                var url = $(this).val();
                var img = $('#shoeImagePreview');
                if (url) {
                    img.attr('src', url).removeClass('d-none');
                } else {
                    img.addClass('d-none');
                }
            });
        });
    </script>
}
